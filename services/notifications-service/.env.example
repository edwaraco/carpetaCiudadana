# ðŸ“§ Notifications Service - External RabbitMQ Configuration
# Copy this file to .env and configure with your values

# SendGrid Configuration (Required)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_TEST_MODE=true

# Environment (development/production)
ENVIRONMENT=development

# RabbitMQ Configuration (Required - External Broker)
# Point this to your existing RabbitMQ instance
RABBITMQ_URL=amqp://username:password@your-rabbitmq-host:5672/
EXCHANGE_NAME=microservices.topic
QUEUE_NAME=notifications.email.queue
ROUTING_KEYS=user.registration.email,user.registration.complete,notifications.email.send

# Service Configuration
LISTEN_PORT=8080
CONSUMER_ENABLED=true
CONSUMER_TAG=notifications-service
CONSUMER_WORKERS=3

# External Services
AUTH_SERVICE_URL=http://auth-service:8080

# Service Configuration
PORT=8082
SERVICE_NAME=notifications-service

# Email Templates
FROM_EMAIL=noreply@carpeta.gov.co
FROM_NAME=Carpeta Ciudadana Digital
