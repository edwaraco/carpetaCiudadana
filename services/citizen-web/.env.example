# API Configuration
# Using relative path - nginx proxy will forward to backend service
# For Docker: use /api/v1 (nginx proxy)
# For local dev without Docker: use http://localhost:8080/api/v1
VITE_API_BASE_URL=/api/v1

# Operator Configuration
VITE_OPERATOR_ID=micarpeta
VITE_OPERATOR_NAME=MiCarpeta

# MFA Configuration (optional)
VITE_MFA_REQUIRED=false

# =============================================================================
# MOCK CONFIGURATION - Control Granular de Mocks
# =============================================================================
# Master switch: Habilita/deshabilita TODOS los mocks
# Si está en false, todos los servicios usarán APIs reales
VITE_USE_MOCKS=true

# Control granular por contexto (solo aplica si VITE_USE_MOCKS=true)
# Permite deshabilitar mocks específicos mientras mantienes otros activos
# Útil para integración incremental de servicios backend
# =============================================================================
VITE_MOCK_AUTHENTICATION=true
VITE_MOCK_IDENTITY=true
VITE_MOCK_DOCUMENTS=true
VITE_MOCK_CARPETA=true          # Carpeta Personal (Folder)
VITE_MOCK_PORTABILITY=true
VITE_MOCK_REQUESTS=true         # Solicitudes de Documentos
VITE_MOCK_NOTIFICATIONS=true
VITE_MOCK_AUDIT=true

# =============================================================================
# FEATURE FLAGS - Control de Funcionalidades
# =============================================================================
# Cada flag controla la funcionalidad completa (menú, quick actions, componentes)
# Valores: true | false
# Si no se especifica, usa el valor por defecto de featureFlags.ts
# =============================================================================

# Funcionalidades Principales
VITE_FEATURE_PORTABILITY=true
VITE_FEATURE_DOCUMENT_REQUESTS=true
VITE_FEATURE_DOCUMENTS=true
VITE_FEATURE_UPLOAD_DOCUMENTS=true
VITE_FEATURE_DOWNLOAD_DOCUMENTS=true
VITE_FEATURE_DELETE_DOCUMENTS=true
VITE_FEATURE_NOTIFICATIONS=true

# Dashboard
VITE_FEATURE_STORAGE_STATS=true
VITE_FEATURE_RECENT_ACTIVITY=false

# Autenticación
VITE_FEATURE_MFA=false
VITE_FEATURE_REGISTRATION=true

# Auditoría
VITE_FEATURE_AUDIT_LOGS=true

